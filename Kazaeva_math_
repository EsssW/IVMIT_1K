//10
void main() {
	​int n, k;
	​k = 0;
	​printf("enter n\n");
	scanf_s("%d", &n);
	int ​N = n;
	for(; n>=1;n--) {
		​​if(n < 10) {
			​​​k = k + n;
			​​​n = 0;
		}
		​​else {
		​​​	while(N > 0) {
				​​​​N = N / 10;
				​​​​k = k + 1;
		​​​	}
	 ​​	}
	​​N = n;
		​​
	}
	​printf("total number %d", k);
	​
}
